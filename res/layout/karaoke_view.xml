<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39c"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/view_tv_mabaihat"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Mabaihat"
        android:textAppearance="?android:attr/textAppearanceLarge" />/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
		<TextView
            android:id="@+id/view_tv_baihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bai Hat"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/view_tv_tenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten Bai Hat"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/view_tv_tacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tac Gia"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/view_bt_edit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />
            
       
    </LinearLayout>
    
    

</LinearLayout>
